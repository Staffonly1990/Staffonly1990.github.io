{
  "extends": "@cec.front/typescript-config",
  "compilerOptions": {
    "jsx": "react-jsx",
    "composite": true,
    "incremental": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true
  },
  "include": [
    "src/_locales/*.json",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.test*"
  ]
}